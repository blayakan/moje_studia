@page
@model zaliczenie_razor_pages.Pages.Products.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Produkty</h1>

<p>
    <a asp-page="Create" class="btn btn-secondary">Stwórz nowy</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Product)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Id)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-secondary">Edytuj</a>
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-secondary">Szczegóły</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-secondary">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>
