@page
@model zaliczenie_razor_pages.Pages.Products.DeleteModel

@{
    ViewData["Title"] = "Usuń produkt";
}

<div class="container mt-4">
    <h1 class="mb-3">@ViewData["Title"]</h1>

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Czy na pewno chcesz usunąć ten produkt?</h4>
            <p>Nazwa: @Model.Product.Name</p>
        </div>
    </div>

    <form method="post" class="mt-3">
        <input type="hidden" asp-for="Product.Id" />
        <button type="submit" class="btn btn-danger">Usuń</button>
        <a asp-page="./Index" class="btn btn-secondary">Anuluj</a>
    </form>
</div>
